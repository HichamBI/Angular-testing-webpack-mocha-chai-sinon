{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "types": [
    "core-js",
    "hammerjs",
    "jasmine",
    "node",
    "selenium-webdriver",
    "sinon",
    "chai",
    "chai-spies"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ngfactory",
    "typings"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
